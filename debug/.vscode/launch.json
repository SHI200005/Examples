{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++ file with LLDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for LLDB",
                    "text": "settings set target.process.use-lldb-server false",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
